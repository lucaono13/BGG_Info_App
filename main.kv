GameRoot:

<GameRoot>:

    GridLayout:
        cols: 2
        SearchScreen:
        GridLayout:
            cols: 1
            size_hint_x: .25
            Button:
                text: 'Add'
                size_hint_x: .5
            Button:
                text: 'Remove'
                size_hint_x: .5


#<SelectableLabel>:
<RecycleViewRow>:
    # Draw a background to indicate selection
    name: ""
    year: ""
    uid: ""
    img: ""
    canvas.before:
        Color:
            rgba: (0, 1, 1, .80) if self.selected else (0, 0, 1, 0)
        Rectangle:
            pos: self.pos
            size: self.size
        Color:
            rgba: (0, 0, 0, .3)
        Rectangle:
            pos: self.pos
            size: self.size

    orientation: 'horizontal'
    Label:
        text: root.name
        text_size: self.size
        shorten: False
        halign:'left'
        valign: 'center'
    Label:
        text: root.year
    Label:
        text: root.uid
    AsyncImage:
        size_hint_x: .5
        size_hint_y: .5
        source: root.img
        valign: 'center'
<SearchScreen>:
    #orientation: 'vertical'
    cols: 1

    searchinput: searchinput
    search_results: search_results_list
    #searchrs: searchrs

    BoxLayout:
        height: "30dp"
        size_hint_y: None

        TextInput:
            multiline:False
            on_text_validate: root.on_search(normal_bg, bg_expan, searchinput)
            id: searchinput
            size_hint_x: .5
            focus: True
            height: 30
            hint_text: 'Board Game Name'
        ToggleButton:
            id: enter
            text: 'Search'
            on_press: root.on_search(normal_bg, bg_expan, searchinput)
            height: 30
            size_hint_x: .15
    AnchorLayout:
        anchor_x: 'right'
        anchor_y: 'top'
        GridLayout:
            cols: 1
            size_x: root.width
            GridLayout:
                height: "30dp"
                cols: 4
                size_hint_y: None
                Label:
                    text: 'Board Game'
                    size_hint_x: 1
                CheckBox:
                    id: normal_bg
                    size_hint_x: 1
                Label:
                    text: 'Expansion'
                    size_hint_x: 1
                CheckBox:
                    id: bg_expan
                    size_hint_x: 1
            GridLayout:
                cols: 3
                size_hint_y: None
                height: "30dp"
                Label:
                    text: "Name"
                    size_hint_x: 1
                Label:
                    text: "Year"
                    size_hint_x: 1
                    padding:  "1000dp",0
                Label:
                    text: "ID"
                    size_hint_x: 1
            Widget:
                id: separator
                size_hint_y: None
                height: 6
                canvas:
                    Color:
                        rgb: 1., 1., 1.
                    Rectangle:
                        pos: 0, separator.center_y
                        size: root.width, 2
            RecycleView:
                id: search_results_list

                #data: [{'text': str(x)} for x in range(20)]

                viewclass: 'RecycleViewRow'

                SelectableRecycleBoxLayout:
                    default_size: None, dp(100)
                    default_size_hint: 1, None
                    size_hint_y: None
                    height: self.minimum_height
                    orientation: 'vertical'
                    multiselect: True
                    touch_multiselect: True
